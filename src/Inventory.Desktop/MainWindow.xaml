<Window x:Class="Inventory.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="سامانه انبارداری اداری" Height="820" Width="1320" WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft" Background="#0B1120">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" CornerRadius="18" Padding="16" Margin="0,0,0,12" Background="#55233456">
            <DockPanel>
                <StackPanel DockPanel.Dock="Right">
                    <TextBlock Text="سامانه انبارداری اداری" FontSize="30" FontWeight="Bold"/>
                    <TextBlock Text="نسخه ویندوزی حرفه‌ای - UX ساده برای کاربر غیر فنی" Foreground="#CBD5E1"/>
                </StackPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="ایمپورت یک فایل CSV" Click="ImportCsv_Click" Margin="6" Padding="12,8"/>
                    <Button Content="ایمپورت پوشه کامل Access" Click="ImportAccessFolder_Click" Margin="6" Padding="12,8"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <UniformGrid Grid.Row="1" Columns="3" Margin="0,0,0,12">
            <Border Background="#55334155" CornerRadius="12" Margin="6" Padding="12"><StackPanel><TextBlock Text="تعداد اقلام"/><TextBlock Text="{Binding DashboardItemsCount}" FontSize="32" FontWeight="Bold"/></StackPanel></Border>
            <Border Background="#55334155" CornerRadius="12" Margin="6" Padding="12"><StackPanel><TextBlock Text="موجودی کل"/><TextBlock Text="{Binding DashboardTotalStock}" FontSize="32" FontWeight="Bold"/></StackPanel></Border>
            <Border Background="#55334155" CornerRadius="12" Margin="6" Padding="12"><StackPanel><TextBlock Text="اقلام بحرانی"/><TextBlock Text="{Binding DashboardLowStockCount}" FontSize="32" FontWeight="Bold"/></StackPanel></Border>
        </UniformGrid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.2*"/>
                <ColumnDefinition Width="3.4*"/>
                <ColumnDefinition Width="1.8*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="6" Padding="12" CornerRadius="12" Background="#55334155">
                <StackPanel>
                    <TextBlock Text="اقلام انبار" FontSize="20" FontWeight="Bold" Margin="0,0,0,8"/>
                    <DataGrid ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" AutoGenerateColumns="False" Height="320" Margin="0,0,0,8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="کد" Binding="{Binding Code}" Width="*"/>
                            <DataGridTextColumn Header="نام" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="موجودی" Binding="{Binding Stock}"/>
                            <DataGridTextColumn Header="حداقل" Binding="{Binding MinStock}"/>
                            <DataGridTextColumn Header="قیمت" Binding="{Binding Price}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Text="ثبت کالای جدید" FontWeight="Bold" Margin="0,8,0,4"/>
                    <WrapPanel>
                        <TextBox x:Name="CodeBox" Width="120" ToolTip="کد کالا"/>
                        <TextBox x:Name="NameBox" Width="170" ToolTip="نام کالا"/>
                        <TextBox x:Name="UnitBox" Width="90" Text="عدد" ToolTip="واحد"/>
                        <TextBox x:Name="MinStockBox" Width="95" Text="0" ToolTip="حداقل موجودی"/>
                        <Button Content="افزودن کالا" Click="CreateItem_Click"/>
                    </WrapPanel>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1" Margin="6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Padding="12" CornerRadius="12" Background="#55334155" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="6">
                            <TextBlock Text="ثبت رسید" FontWeight="Bold" Margin="0,0,0,6"/>
                            <TextBlock Text="تعداد"/>
                            <TextBox x:Name="ReceiptQtyBox" Text="1"/>
                            <TextBlock Text="تامین‌کننده"/>
                            <TextBox x:Name="SupplierBox" Text="تامین‌کننده پیش‌فرض"/>
                            <Button Content="ثبت ورود" Click="CreateReceipt_Click"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="6">
                            <TextBlock Text="ثبت حواله خروج" FontWeight="Bold" Margin="0,0,0,6"/>
                            <TextBlock Text="تعداد"/>
                            <TextBox x:Name="IssueQtyBox" Text="1"/>
                            <TextBlock Text="واحد دریافت‌کننده"/>
                            <TextBox x:Name="DepartmentBox" Text="واحد اداری"/>
                            <Button Content="ثبت خروج" Click="CreateIssue_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Padding="12" CornerRadius="12" Background="#55334155">
                    <StackPanel>
                        <TextBlock Text="فعالیت‌های اخیر" FontWeight="Bold" FontSize="18" Margin="0,0,0,8"/>
                        <DataGrid ItemsSource="{Binding Activities}" AutoGenerateColumns="False" Height="300">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="زمان" Binding="{Binding Time}" Width="*"/>
                                <DataGridTextColumn Header="نوع" Binding="{Binding Type}"/>
                                <DataGridTextColumn Header="کالا" Binding="{Binding ItemName}" Width="*"/>
                                <DataGridTextColumn Header="تعداد" Binding="{Binding Quantity}"/>
                                <DataGridTextColumn Header="طرف/واحد" Binding="{Binding Party}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Grid.Column="2" Margin="6" Padding="12" CornerRadius="12" Background="#55334155">
                <StackPanel>
                    <TextBlock Text="اقلام بحرانی" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
                    <ListBox ItemsSource="{Binding LowStockItems}" Height="520">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="10" Margin="0,0,0,6" Padding="8" Background="#334155">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Code}" Foreground="#CBD5E1"/>
                                        <TextBlock>
                                            <Run Text="موجودی: "/><Run Text="{Binding Stock}"/>
                                            <Run Text=" | حداقل: "/><Run Text="{Binding MinStock}"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="3" CornerRadius="12" Padding="10" Margin="6,12,6,0" Background="#334155">
            <TextBlock x:Name="StatusText" Text="آماده" Foreground="#E2E8F0"/>
        </Border>
    </Grid>
</Window>
