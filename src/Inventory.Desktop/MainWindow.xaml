<Window x:Class="Inventory.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="سامانه انبارداری اداری" Height="760" Width="1260" WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft" Background="#0B1120">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" CornerRadius="16" Padding="16" Margin="0,0,0,12" Background="#55233456">
            <StackPanel>
                <TextBlock Text="سامانه انبارداری اداری" FontSize="28" FontWeight="Bold"/>
                <TextBlock Text="نسخه ویندوزی (WPF) برای ثبت ساده ورود/خروج و مشاهده آمار" Foreground="#CBD5E1"/>
            </StackPanel>
        </Border>

        <UniformGrid Grid.Row="1" Columns="3" Margin="0,0,0,12">
            <Border Background="#55334155" CornerRadius="12" Margin="6" Padding="12"><StackPanel><TextBlock Text="تعداد اقلام"/><TextBlock Text="{Binding DashboardItemsCount}" FontSize="30" FontWeight="Bold"/></StackPanel></Border>
            <Border Background="#55334155" CornerRadius="12" Margin="6" Padding="12"><StackPanel><TextBlock Text="موجودی کل"/><TextBlock Text="{Binding DashboardTotalStock}" FontSize="30" FontWeight="Bold"/></StackPanel></Border>
            <Border Background="#55334155" CornerRadius="12" Margin="6" Padding="12"><StackPanel><TextBlock Text="اقلام بحرانی"/><TextBlock Text="{Binding DashboardLowStockCount}" FontSize="30" FontWeight="Bold"/></StackPanel></Border>
        </UniformGrid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="6" Padding="12" CornerRadius="12" Background="#55334155">
                <StackPanel>
                    <TextBlock Text="اقلام" FontSize="20" FontWeight="Bold" Margin="0,0,0,8"/>
                    <DataGrid ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" AutoGenerateColumns="False" Height="230" Margin="0,0,0,8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="کد" Binding="{Binding Code}"/>
                            <DataGridTextColumn Header="نام" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="موجودی" Binding="{Binding Stock}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock Text="ثبت کالای جدید" FontWeight="Bold" Margin="0,8,0,4"/>
                    <TextBox x:Name="CodeBox" ToolTip="کد کالا"/>
                    <TextBox x:Name="NameBox" ToolTip="نام کالا"/>
                    <TextBox x:Name="UnitBox" Text="عدد" ToolTip="واحد"/>
                    <TextBox x:Name="MinStockBox" Text="0" ToolTip="حداقل موجودی"/>
                    <Button Content="افزودن کالا" Click="CreateItem_Click"/>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1" Margin="6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Padding="12" CornerRadius="12" Background="#55334155" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="6">
                            <TextBlock Text="ثبت رسید" FontWeight="Bold"/>
                            <TextBox x:Name="ReceiptQtyBox" Text="1"/>
                            <TextBox x:Name="SupplierBox" Text="تامین‌کننده پیش‌فرض"/>
                            <Button Content="ثبت ورود" Click="CreateReceipt_Click"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="6">
                            <TextBlock Text="ثبت حواله خروج" FontWeight="Bold"/>
                            <TextBox x:Name="IssueQtyBox" Text="1"/>
                            <TextBox x:Name="DepartmentBox" Text="واحد اداری"/>
                            <Button Content="ثبت خروج" Click="CreateIssue_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Padding="12" CornerRadius="12" Background="#55334155">
                    <StackPanel>
                        <TextBlock Text="فعالیت‌های اخیر" FontWeight="Bold" FontSize="18" Margin="0,0,0,8"/>
                        <DataGrid ItemsSource="{Binding Activities}" AutoGenerateColumns="False" Height="280">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="زمان" Binding="{Binding Time}" Width="*"/>
                                <DataGridTextColumn Header="نوع" Binding="{Binding Type}"/>
                                <DataGridTextColumn Header="کالا" Binding="{Binding ItemName}" Width="*"/>
                                <DataGridTextColumn Header="تعداد" Binding="{Binding Quantity}"/>
                                <DataGridTextColumn Header="طرف/واحد" Binding="{Binding Party}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
